    "url": "https://github.com/brunocoelhor/node-typescript-api/issues"
  },
  "homepage": "https://github.com/brunocoelhor/node-typescript-api#readme",
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.4",
